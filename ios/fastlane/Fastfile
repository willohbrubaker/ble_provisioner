default_platform(:ios)

platform :ios do
  lane :build_signed_ipa do
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_PRIVATE_KEY"]
    )

    # Download the App Store distribution provisioning profile
    profile_path = sigh(
      api_key: api_key,
      app_identifier: "com.brubaker.bleProvisioner",  # Your exact bundle ID
      team_id: "3SM742MGC4",  # Your team ID
      readonly: true,  # Uses existing profile if possible
      development: false  # Gets distribution (App Store) profile instead of development
    )

    # Switch to manual signing with the downloaded profile
    update_code_signing_settings(
      use_automatic_signing: false,
      profile_path: profile_path,  # Path from sigh
      code_sign_identity: "iPhone Distribution",  # Standard for App Store
      team_id: "3SM742MGC4",
      targets: ["Runner"]
    )

    # Build and export the signed IPA
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true,  # Fresh build for reliability
      output_directory: "../build/ios/ipa",
      output_name: "XH-C2X-Provisioner.ipa"
    )
  end
end